@{
    ViewData["Title"] = "Register of legal entities";
}

<script src="~/js/jquery/registerOfLegalEntities.js"></script>

<div>
    <div class="container text-center">
        <div class="row align-items-center">
            <div class="col-12">
                <h1 class="display-4 text-center">Register of legal entities</h1>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col text-center">
                <p>Create your registration.</p>
                <p>View your orders easily, shop faster and have a personalized experience.</p>
                <p>*Required fields</p>
            </div>
        </div>
        <form method="post" action="ActivateYourRegistration_LegalEntities">
            <fieldset>
                <legend class="display-4 text-center">Account</legend>
                <div class="row">
                    <div class="col-3 align-self-end">
                        <div class="mb-1">
                            <label for="NationalRegisterOfLegalEntities" class="form-label">National register of legal entities*</label>
                        </div>
                    </div>
                    <div class="col-3 align-self-end">
                        <div class="mb-1">
                            <label for="CorporateReason" class="form-label">Corporate reason*</label>
                        </div>
                    </div>
                    <div class="col-3 align-self-end">
                        <div class="mb-1">
                            <label for="FantasyName" class="form-label">Fantasy name*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="OpeningDate" class="form-label">Opening date*</label>
                        </div>
                    </div>
                    <div class="col-1 align-self-end">
                        <div class="mb-1">
                            <label for="Situation" class="form-label">Situation*</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 align-self-start">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="NationalRegisterOfLegalEntities"
                                   name="NationalRegisterOfLegalEntities"
                                   type="text"
                                   placeholder="National register of legal entities">
                        </div>
                    </div>
                    <div class="col-3 align-self-start">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="CorporateReason"
                                   name="CorporateReason"
                                   type="text"
                                   placeholder="Corporate reason">
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="FantasyName"
                                   name="FantasyName"
                                   type="text"
                                   placeholder="Fantasy name">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="OpeningDate"
                                   name="OpeningDate"
                                   type="text"
                                   placeholder="Opening date">
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Situation"
                                   name="Situation"
                                   type="text"
                                   placeholder="Situation">

                        </div>
                    </div>

                </div>

                <legend class="display-4 text-center">Address</legend>
                <div class="row">
                    <div class="col-4 align-self-end">
                        <div class="mb-1">
                            <label for="Address" class="form-label">Address*</label>
                        </div>
                    </div>
                    <div class="col-1 align-self-end">
                        <div class="mb-1">
                            <label for="Number" class="form-label">Number*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="Neighborhood" class="form-label">Neighborhood*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="ZipCode" class="form-label">ZipCode*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="City" class="form-label">City*</label>
                        </div>
                    </div>
                    <div class="col-1 align-self-end">
                        <div class="mb-1">
                            <label for="State" class="form-label">State*</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Address"
                                   name="Address"
                                   type="text"
                                   placeholder="Address">
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Number"
                                   name="Number"
                                   type="text"
                                   placeholder="Number">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Neighborhood"
                                   name="Neighborhood"
                                   type="text"
                                   placeholder="Neighborhood">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="ZipCode"
                                   name="ZipCode"
                                   type="text"
                                   placeholder="ZipCode">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="City"
                                   name="City"
                                   type="text"
                                   placeholder="City">
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="State"
                                   name="State"
                                   type="text"
                                   placeholder="State">
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col align-self-end">
                        <div class="mb-1">
                            <label for="Members" class="form-label">Members*</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Members"
                                   name="Members"
                                   type="text"
                                   placeholder="Members">
                        </div>
                    </div>
                </div>

                <legend class="display-4 text-center">Login</legend>
                <div class="row">
                    <div class="col-5">
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="Email" class="form-label">Email*</label>
                        </div>
                    </div>
                    <div class="col-5">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                        <div class="md-1">
                            <input class="form-control form-control-sm text-center" 
                                    id="Email" 
                                    name="Email" 
                                    type="text" 
                                    placeholder="Email">
                        </div>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="Password" class="form-label">Password*</label>
                        </div>
                    </div>
                    <div class="col-5">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center" id="Password" name="Password" type="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>