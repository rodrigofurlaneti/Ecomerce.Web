@{
    ViewData["Title"] = "Registration physical person";
}

<script src="~/js/jquery/registrationPhysicalPerson.js"></script>

<div>
    <div class="container text-center">
        <div class="row align-items-center">
            <div class="col-12">
                <h1 class="display-4 text-center">Registration physical person</h1>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col text-center">
                <p>Create your registration.</p>
                <p>View your orders easily, shop faster and have a personalized experience.</p>
                <p>*Required fields</p>
            </div>
        </div>
        <form method="post" action="ActivateYourRegistration_PhysicalPerson">
            <fieldset>
                <legend class="display-4 text-center">Account</legend>
                <div class="row">
                    <div class="col-3 align-self-end">
                        <div class="mb-1">
                            <label for="RegistrationOfIndividuals" class="form-label">Registration of individuals*</label>
                        </div>
                    </div>
                    <div class="col-3 align-self-end">
                        <div class="mb-1">
                            <label for="FullName" class="form-label">Full name*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="DateOfBirth" class="form-label">Date of birth*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="Gender" class="form-label">Gender*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="Telephone" class="form-label">Telephone*</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 align-self-start">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="RegistrationOfIndividuals"
                                   name="RegistrationOfIndividuals"
                                   type="text"
                                   placeholder="Registration of individuals">
                        </div>
                    </div>
                    <div class="col-3 align-self-start">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="FullName"
                                   name="FullName"
                                   type="text"
                                   placeholder="Full name">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="DateOfBirth"
                                   name="DateOfBirth"
                                   type="text"
                                   placeholder="Date of birth">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <select class="form-select form-control form-control-sm text-center" 
                                    id="Gender" 
                                    name="Gender">
                                <option selected>Selected</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Telephone"
                                   name="Telephone"
                                   type="text"
                                   placeholder="Telephone">

                        </div>
                    </div>
                </div>

                <legend class="display-4 text-center">Address</legend>
                <div class="row">
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="ZipCode" class="form-label">ZipCode*</label>
                        </div>
                    </div>
                    <div class="col-3 align-self-end">
                        <div class="mb-1">
                            <label for="Address" class="form-label">Address*</label>
                        </div>
                    </div>
                    <div class="col-1 align-self-end">
                        <div class="mb-1">
                            <label for="Number" class="form-label">Number*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="Neighborhood" class="form-label">Neighborhood*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="City" class="form-label">City*</label>
                        </div>
                    </div>
                    <div class="col-2 align-self-end">
                        <div class="mb-1">
                            <label for="State" class="form-label">State*</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="ZipCode"
                                   name="ZipCode"
                                   type="text"
                                   placeholder="ZipCode">
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Address"
                                   name="Address"
                                   type="text"
                                   placeholder="Address">
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Number"
                                   name="Number"
                                   type="text"
                                   placeholder="Number">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="Neighborhood"
                                   name="Neighborhood"
                                   type="text"
                                   placeholder="Neighborhood">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <input class="form-control form-control-sm text-center"
                                   id="City"
                                   name="City"
                                   type="text"
                                   placeholder="City">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-1">
                            <select class="form-select form-control form-control-sm text-center"
                                    id="State"
                                    name="State">
                                <option selected>Selected</option>
                                <option value="SP">SP</option>
                                <option value="RJ">RJ</option>
                            </select>
                        </div>
                    </div>
                </div>
                <legend class="display-4 text-center">Login</legend>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4 align-self-end">
                        <div class="mb-1">
                            <label for="Email" class="form-label">Email*</label>
                        </div>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                        <div class="md-1">
                            <input class="form-control form-control-sm text-center" id="Email" name="Email" type="text" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4 align-self-end">
                        <div class="mb-1">
                            <label for="Password" class="form-label">Password*</label>
                        </div>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-4">
                        <div class="mb-1">
                            <input class="form-control form-control-sm" id="Password" name="Password" type="password" placeholder="Password">
                        </div>
                    </div>
                    <div class="col-4">
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>

            </fieldset>
        </form>

    </div>
</div>